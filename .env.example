# Application Configuration
APP_NAME=reply-ai-suggester
APP_VERSION=1.0.0
APP_ENV=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database Configuration
DATABASE_URL=postgresql://replyai:replyai123@localhost:5432/replyai_db
REDIS_URL=redis://localhost:6379/0

# AI Provider Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
QWEN_API_KEY=your_qwen_api_key_here

# Security Configuration
SECRET_KEY=your_super_secret_key_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Monitoring & Observability
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Cache Configuration
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Personalization
PERSONALIZATION_ENABLED=true
ENCRYPTION_KEY=your_encryption_key_here

# CI/CD Configuration
DOCKER_REGISTRY=ghcr.io
IMAGE_TAG_PREFIX=v

# Development Tools
SONAR_HOST_URL=https://sonarcloud.io
SONAR_TOKEN=your_sonar_token
SONAR_PROJECT_KEY=reply-ai-suggester

# Testing Configuration
TEST_DATABASE_URL=postgresql://replyai:replyai123@localhost:5432/replyai_test_db
COVERAGE_THRESHOLD=80

# Build Configuration
ANDROID_SDK_VERSION=34
KOTLIN_VERSION=1.9.20
COMPOSE_VERSION=2024.02.00